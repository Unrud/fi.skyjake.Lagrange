{
    "app-id": "fi.skyjake.Lagrange",
    "default-branch": "release",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "20.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "lagrange",
    "rename-desktop-file": "fi.skyjake.lagrange.desktop",
    "rename-icon": "fi.skyjake.lagrange",
    "finish-args": [
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=network",
        "--device=dri",
        "--filesystem=home"
    ],
    "modules": [
        {
            "name": "lagrange",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DCMAKE_INSTALL_PREFIX=/app"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/skyjake/lagrange",
                    "tag": "v1.1.0",
                    "commit": "abcd2daa61c0ef5abf542c3e681657672858885b"
                }
            ]
        }
    ]
}
