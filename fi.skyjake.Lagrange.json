{
    "app-id": "fi.skyjake.Lagrange",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "20.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "lagrange",
    "rename-desktop-file": "fi.skyjake.lagrange.desktop",
    "rename-icon": "fi.skyjake.lagrange",
    "finish-args": [
        "--socket=x11",
        "--socket=pulseaudio",
        "--share=ipc",
        "--share=network",
        "--device=dri",
        "--filesystem=xdg-download",
        "--filesystem=home:ro"
    ],
    "modules": [
        {
            "name": "lagrange",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo",
                "-DCMAKE_INSTALL_PREFIX=/app",
                "-DENABLE_DOWNLOAD_EDIT=NO"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/skyjake/lagrange",
                    "tag": "v1.1.1",
                    "commit": "f7f335d0d5b4f488e9707c18a2128190a4549738"
                }
            ]
        }
    ]
}
